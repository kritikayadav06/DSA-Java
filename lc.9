class Solution {
    public boolean isPalindrome(int x) {
        int n=x;
        int r=0,newn=0,nc=0;
        nc=n;
        if(n<0){
            return false;
        }
        else{
            while(n!=0){
                r=n%10;
                newn=newn*10 +r;
                n=n/10;

            }
             if(newn==nc){
                return true;
            }
            else{
                return false;
            }
           
        }

        
    }
}
